<h1>Event Teachers</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Teacher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_teachers.each do |event_teacher| %>
      <tr>
        <td><%= event_teacher.event %></td>
        <td><%= event_teacher.teacher %></td>
        <td><%= link_to 'Show', event_teacher %></td>
        <td><%= link_to 'Edit', edit_event_teacher_path(event_teacher) %></td>
        <td><%= link_to 'Destroy', event_teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

