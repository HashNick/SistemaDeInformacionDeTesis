<p id="notice"><%= notice %></p>

<h1>User Contributions</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Teacher</th>
      <th>Contribution</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_contributions.each do |user_contribution| %>
      <tr>
        <td><%= user_contribution.student %></td>
        <td><%= user_contribution.teacher %></td>
        <td><%= user_contribution.contribution %></td>
        <td><%= link_to 'Show', user_contribution %></td>
        <td><%= link_to 'Edit', edit_user_contribution_path(user_contribution) %></td>
        <td><%= link_to 'Destroy', user_contribution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

