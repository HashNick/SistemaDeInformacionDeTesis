  <tbody>
    <% @teacher_investigation_groups.each do |teacher_investigation_group| %>
      <tr>
        <td><%= teacher_investigation_group.teacher %></td>
        <td><%= teacher_investigation_group.investigation_group %></td>
        <td><%= link_to 'Show', teacher_investigation_group %></td>
        <td><%= link_to 'Edit', edit_teacher_investigation_group_path(teacher_investigation_group) %></td>
        <td><%= link_to 'Destroy', teacher_investigation_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
