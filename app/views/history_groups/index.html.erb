<p id="notice"><%= notice %></p>

<h1>History Groups</h1>

<table>
  <thead>
    <tr>
      <th>Bonding date</th>
      <th>Exit date</th>
      <th>Investigation group</th>
      <th>Student</th>
      <th>Teacher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @history_groups.each do |history_group| %>
      <tr>
        <td><%= history_group.bonding_date %></td>
        <td><%= history_group.exit_date %></td>
        <td><%= history_group.investigation_group %></td>
        <td><%= history_group.student %></td>
        <td><%= history_group.teacher %></td>
        <td><%= link_to 'Show', history_group %></td>
        <td><%= link_to 'Edit', edit_history_group_path(history_group) %></td>
        <td><%= link_to 'Destroy', history_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

