<p id="notice"><%= notice %></p>

<h1>Tag Contributions</h1>

<table>
  <thead>
    <tr>
      <th>Tag</th>
      <th>Contribution</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tag_contributions.each do |tag_contribution| %>
      <tr>
        <td><%= tag_contribution.tag %></td>
        <td><%= tag_contribution.contribution %></td>
        <td><%= link_to 'Show', tag_contribution %></td>
        <td><%= link_to 'Edit', edit_tag_contribution_path(tag_contribution) %></td>
        <td><%= link_to 'Destroy', tag_contribution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag Contribution', new_tag_contribution_path %>
